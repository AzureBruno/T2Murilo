<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ed_txt_register_user" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.35000002"
            android:hint="Username"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/ed_txt_register_pass" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ed_txt_register_user"
            app:layout_constraintEnd_toEndOf="@+id/ed_txt_register_user"
            app:layout_constraintStart_toStartOf="@+id/ed_txt_register_user" android:hint="Password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/ed_txt_register_pass2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ed_txt_register_pass"
            app:layout_constraintStart_toStartOf="@+id/ed_txt_register_pass"
            app:layout_constraintEnd_toEndOf="@+id/ed_txt_register_pass" android:hint="Repeat Password"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_register" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ed_txt_register_pass2"
            app:layout_constraintEnd_toEndOf="@+id/ed_txt_register_pass2"
            app:layout_constraintStart_toStartOf="@+id/ed_txt_register_pass2"/>
</android.support.constraint.ConstraintLayout>